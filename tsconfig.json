{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "lib": ["ESNext"],
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 
    "ignoreDeprecations": "5.0"
  }, 
  "include": ["src/**/*"] 
}
